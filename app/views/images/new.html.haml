.row
  .col-md-12.text-center
    %h4 Upload Progress
    .progress
      .progress-bar.progress-bar-striped.progress-bar-success.active{'aria-valuenow' => '70','aria-valuemin' => '0', 'aria-valuemax' => '100', style: 'width:80%;'}
        80%
.row
  .col-md-8.col-centered.text-center.vertical-center
    =bootstrap_form_for @image do |f|
      =f.text_field :caption
      =f.hidden_field :key
      =f.submit "Submit Image!", class: "btn btn-success"
/%br
