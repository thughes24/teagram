.row
  .col-md-12.text-center
    %h4 Upload Progress
    .progress
      .progress-bar.progress-bar-striped.progress-bar-success.active{'aria-valuenow' => '0','aria-valuemin' => '0', 'aria-valuemax' => '100', style: 'width:0%;'}
        0%
.row
  .col-md-8.col-centered.text-center.vertical-center
    =direct_upload_form_for @uploader, class: "form form-vertical" do |f|
      .form-group
        =f.file_field :image, class: "form-control"
        =f.submit "Upload", class: "btn btn-primary"
