.row
  .col-md-12.text-center
    %h4 Upload Progress
    .progress
      .progress-bar.progress-bar-striped.progress-bar-success.active{'aria-valuenow' => '70','aria-valuemin' => '0', 'aria-valuemax' => '100', style: 'width:80%;'}
        80%
.row
  .col-md-8.col-centered.text-center.vertical-center
    %form.form-vertical
      .form-group
        %label{for: "caption"} Caption:
        %input.form-control{type: "text", name:"caption"}
      .form-group
        %label.control-label{for: "location"} Location (optional):
        %input.form-control{type: "text", name: "location"}
      %input.btn.btn-primary{type: 'submit', value: "Post Image"}
%br
.row
  .col-md-7.col-centered.text-center
    %h4 Preview:
    %img.img-responsive.img-rounded.col-centered{src: "/images/600x600.png"}